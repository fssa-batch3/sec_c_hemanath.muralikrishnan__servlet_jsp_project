<web-app>

	<!-- Define the character encoding filter -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value> <!-- Specify your desired charset -->
		</init-param>
	</filter>

	<!-- Map the filter to all requests -->
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern> <!-- Map the filter to all URLs -->
	</filter-mapping>

